{
  "name": "gerpo/dms-credit-package",
  "description": "Plugin for DMS to provide users with a credit system",
  "type": "package",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Adam Marciniak",
      "email": "adamarc@web.de"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "D:\\Web-Projekte\\Plugisto"
    }
  ],
  "autoload": {
    "psr-4": {
      "Gerpo\\DmsCredits\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DmsCredits\\Tests\\": "tests"
    },
    "files": [
      "tests/Helper.php"
    ]
  },
  "require": {
    "spatie/laravel-event-projector": "^2.0",
    "ramsey/uuid": "^3.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "orchestra/testbench": "^3.6"
  },
  "scripts": {
    "post-package-update": [
      "npm install --save-dev chart.js"
    ],
    "post-package-uninstall": [
      "npm uninstall chart.js"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "Gerpo\\DmsCredits\\CreditServiceProvider"
      ]
    },
    "plugisto": {
      "name": "Credits",
      "description": "Credit system",
      "route": "/credits",
      "needed_permission": "have_credits"
    }
  }
}
